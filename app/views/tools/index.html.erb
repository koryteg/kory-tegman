<h1>Listing tools</h1>

<table>
  <tr>
    <th>NAME</th>
    <th></th>
    <th></th>
  </tr>

<% @tools.each do |tool| %>
  <tr>
	<td><%= link_to tool.name, tool %></td>
    <td><%= link_to 'Show', tool %></td>
    <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
    <td><%= link_to 'Destroy', tool, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

